{
  "name": "react-native-spotlight-tour",
  "version": "0.1.0",
  "description": "React Native library to implement a highly customizable app tour feature with an awesome spotlight effect",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:stackbuilders/react-native-spotlight-tour.git",
  "author": "Jose Luis Leon <joseluis5000l@gmail.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "14.7.0",
    "yarn": "1.22.4"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "tslint -c tslint.json \"!(dist)/**/*.ts?(x)\"",
    "test": "jest"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFiles": [
      "<rootDir>/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native))"
    ]
  },
  "dependencies": {
    "react-native-responsive-dimensions": "^3.1.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^3.3.0",
    "@testing-library/react-native": "^7.0.2",
    "@types/jest": "^26.0.10",
    "@types/react-native": "^0.63.4",
    "@types/styled-components": "^5.1.2",
    "jest": "^26.4.2",
    "react": ">=16.8.0",
    "react-native": ">=0.50.0",
    "react-native-svg": ">=12.1.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.2.0",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.7",
    "typescript-styled-plugin": "^0.15.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.50.0",
    "react-native-svg": ">=12.1.0"
  }
}
