{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "plugins": [{
      "name": "@styled/typescript-styled-plugin",
      "lint": {
        "boxModel": "error",
        "duplicateProperties": "error",
        // "emptyRules": "error", // https://github.com/styled-components/typescript-styled-plugin/issues/4
        "float": "error",
        "fontFaceProperties": "error",
        "ieHack": "error",
        "importStatement": "error",
        "important": "error",
        "propertyIgnoredDueToDisplay": "error",
        "universalSelector": "error",
        "unknownProperties": "error",
        "unknownVendorSpecificProperties": "error",
        "validProperties": [],
        "zeroUnits": "error"
      }
    }],
    "pretty": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ESNext",
  },
  "exclude": [
    ".yarn",
    "build/*",
    "dist/*",
    "node_modules/*"
  ]
}
